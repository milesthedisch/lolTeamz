<div style=" margin-top: 6rem; display: inline-block; " class="user-select">
	<h2>Login</h2>

	<%= form_tag '/login' do %>
		<%= label_tag :username %>
		<%= text_field_tag :username %>

		<%= label_tag :password %>
		<%= password_field_tag :password %>

		<%= submit_tag 'Login to LoLTeamz' %>
	<% end %>

</div>

